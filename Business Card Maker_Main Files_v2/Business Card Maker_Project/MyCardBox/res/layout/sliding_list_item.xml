<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nav_drawer_item_selector"
    android:orientation="horizontal"
    android:padding="7dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@string/tv_add_new_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:src="@drawable/addcard" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginRight="7dp"
        android:text="@string/tv_add_new_card"
        android:textColor="@color/nav_drawer_item_text_selector"
        android:textSize="8pt" />

</LinearLayout>